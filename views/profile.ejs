<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="/styles/profile.css">
</head>
<body>
    <div class="container">
        <!-- Greeting Section -->
        <div class="greeting">
            <div class="dp">
                <img src="/public/images/profilepics/<%= user.profilepic || ' defult.webp' %>" alt="Profile Picture">
            </div>
            <h1>Hello, <%= user.name %> ðŸ‘‹</h1>
            <p>You can create a new post.</p>
        </div>

        <!-- Post Creation Form -->
        <form action="/post" method="post">
            <div class="post-form">
                <input type="text" name="content" placeholder="Something you want to say..." id="post-input" required>
                <input type="submit" value="Create New Post" id="create-post-input">
            </div>
        </form>

        <!-- Posts Section -->
        <div class="posts-section">
            <h2>Your Posts:</h2>
            <% if (user.post && user.post.length > 0) { %>
                <% user.post.reverse().forEach(function(post) { %>
                    <div class="post">
                        <div class="post-header">
                            <p>@<%= user.username %></p> <!-- Display the username -->
                        </div>
                        <div class="post-body">
                            <p><%= post.content %></p> <!-- Display the content of each post -->
                        </div>
                        <div class="post-actions">
                            <small><%= post.likes.length %> likes</small>
                            <a href="/like/<%= post._id %>" class="action-button like-button">
                                <%= post.likes.includes(user._id) ? "Unlike" : "Like" %>
                            </a>
                            <a href="/edit/<%= post._id %>" class="action-button edit-button">Edit</a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No posts to display.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
